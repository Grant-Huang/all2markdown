{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "noImplicitAny": false
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 