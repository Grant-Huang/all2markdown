  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.9.3",
    "bun": "^1.1.41",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  }
